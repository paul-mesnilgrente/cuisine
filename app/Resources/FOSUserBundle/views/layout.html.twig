{% extends '::base.html.twig' %}

{% block body %}
  {% if app.request.hasPreviousSession %}
    <div class="row">
      <div class="col-sm-12">
        {% for type, messages in app.session.flashbag.all() %}
          {% for message in messages %}
            <div class="flash-{{ type }}">
              {{ message }}
            </div>
          {% endfor %}
        {% endfor %}
      </div>
    </div>
  {% endif %}

  {% block fos_user_content %}{% endblock fos_user_content %}
{% endblock %}
