{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal" role="form">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="form-group">
        <label for="username" class="col-sm-3 control-label">{{ 'security.login.username'|trans }}</label>
        <div class="col-sm-5">
            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
        </div>
    </div>

    <div class="form-group">
        <label for="password" class="col-sm-3 control-label">{{ 'security.login.password'|trans }}</label>
        <div class="col-sm-5">
            <input class="form-control" type="password" id="password" name="_password" required="required" />
        </div>
    </div>

    
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <div class="checkbox">
                <label for="remember_me">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" checked />
                    {{ 'security.login.remember_me'|trans }}
                </label>
            </div>
        </div>
    </div>

    {% if error %}
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <a href="{{ path('fos_user_resetting_request') }}">{{ 'security.login.forgot_password'|trans }}</a>
            </div>
        </div>
    {% endif %}


    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
        </div>
    </div>
</form>
