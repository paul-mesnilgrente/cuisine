{% trans_default_domain 'FOSUserBundle' %}

<div class="row">
  <div class="col-md-6 col-md-offset-3 well">
    <p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>
    <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>

    <a href="{{ path('fos_user_profile_edit') }}" class="btn btn-primary">{{ 'profile.show.update_profile'|trans }}</a>
    <a href="{{ path('fos_user_change_password') }}" class="btn btn-primary">{{ 'profile.show.update_password'|trans }}</a>
  </div>
</div>
